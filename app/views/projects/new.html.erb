<div class="pledge">

<h2>Create a new Match</h2>


<%= form_for [@user, @project] do |f| %>

  <% if @project.errors.any? %>
    <div class = "error_messages">
  	<h3>Unable to complete pledge:</h3>
    <ul>

  		<% for message in @project.errors.full_messages %>
  			      <div class="alert alert-error">   
              <strong>Error! </strong><%=message%>  
              </div>  
  		<% end %>
  	</ul>
  </div>
  <% end %>
  <br>
  <div class="field">
	<%= f.label :title %>
	<%= f.text_field :title%>
  </div> 
   <div class="field">
	<%= f.label :description %>
	<%= f.text_field :description%>
  </div> 
   <div class="field">
	<%= f.label :team1 %>
	<%= f.text_field :team1%>
  </div> 
     <div class="field">
  <%= f.label :team2 %>
  <%= f.text_field :team2%>
  </div> 

    <div class="field">
  <%= f.datetime_select :matchtime, :default => Time.now %>
  </div> 




    
    <div class="action">
  	
  	<%= button_tag(type: "submit", class: "btn btn-success") do %>
    <i class="icon-leaf"></i> Create Match
    <% end %>
  </div>
 <%end%>
 <br>
 <br>
 <br>
